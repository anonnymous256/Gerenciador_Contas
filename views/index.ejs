<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Divulgação de Lojas</title>
  <style>
    /* Reset básico */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f9fafb;
      color: #333;
      line-height: 1.6;
    }

    /* Cabeçalho */
    header {
      background: linear-gradient(135deg, #0D4376, #0a3357);
      color: #fff;
      padding: 60px 20px;
      text-align: center;
    }

    header h1 {
      font-size: 3rem;
      margin-bottom: 10px;
      font-weight: 700;
      animation: fadeIn 1.5s ease-in-out;
    }

    header p {
      font-size: 1.2rem;
      animation: fadeIn 2s ease-in-out;
    }

    /* Animação de entrada */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Seção de Lojas */
    .lojas {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      padding: 40px 20px;
      gap: 30px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .loja-card {
      background-color: #fff;
      border-radius: 15px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      width: 300px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .loja-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    }

    .loja-card-content {
      padding: 20px;
    }

    .loja-card h3 {
      font-size: 1.5rem;
      margin-bottom: 10px;
      color: #0D4376;
    }

    .loja-card p {
      font-size: 1rem;
      color: #666;
      margin-bottom: 15px;
    }

    .loja-card a {
      display: inline-block;
      padding: 10px 20px;
      background-color: #0D4376;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .loja-card a:hover {
      background-color: #0a3357;
    }
  </style>
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js";
    import { getFirestore, collection, getDocs, doc, getDoc } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyCGf-lc7B3bWjUa1rXmYHXLMK5z-eKrNCU",
      authDomain: "allenbeauty.firebaseapp.com",
      projectId: "allenbeauty",
      storageBucket: "allenbeauty.appspot.com",
      messagingSenderId: "347722299020",
      appId: "1:347722299020:web:1e946417d954bebe5d6da9",
      measurementId: "G-CWM27YKX8C"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    // ID do roteador
    const userId = "SqeUi9WyNvZJ3mi9m14cdrQnA5u1"; // Substitua pelo ID do usuário logado

    async function loadClientes() {
      const lojasContainer = document.querySelector(".lojas");
      const userDoc = await getDoc(doc(db, "users", userId));

      if (userDoc.exists()) {
        const querySnapshot = await getDocs(collection(db, "users"));
        lojasContainer.innerHTML = "";
        querySnapshot.forEach(doc => {
          const cliente = doc.data();
          const lojaCard = document.createElement("div");
          lojaCard.classList.add("loja-card");
          lojaCard.innerHTML = `
            <div class="loja-card-content">
              <h3>${cliente.name || "Nome não informado"}</h3>
              <a href="/agendamento?id=${doc.id}&nome=${cliente.name || "Nome não informado"}">Agendar</a>
            </div>
          `;
          lojasContainer.appendChild(lojaCard);
        });
      } else {
        lojasContainer.innerHTML = "<p>Você não tem permissão para visualizar esta página.</p>";
      }
    }

    document.addEventListener("DOMContentLoaded", loadClientes);
  </script>
</head>
<body>
  <header>
    <h1>Allen Beauty</h1>
    <p>Explore nossos clientes cadastrados e agende um horário!</p>
  </header>

  <section class="lojas"></section>

</body>
</html>