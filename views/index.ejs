<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Allen Beauty - Agendamentos</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f9fafb;
        color: #333;
        line-height: 1.6;
    }

    header {
        background: linear-gradient(135deg, #0D4376, #0a3357);
        color: #fff;
        text-align: center;
        padding: 20px 40px;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
    }

    header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    header p {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    .content-logo {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    nav ul {
        list-style: none;
        margin-top: 20px;
    }

    nav ul li {
        display: inline;
        margin: 0 15px;
    }

    nav ul li a {
        color: white;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease-in-out;
        border: 2px white solid;
        padding: 10px;
        border-radius: 10px;
    }

    nav ul li a:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .content-header {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
    }

    .lojas {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        padding: 40px 20px;
        max-width: 1200px;
        margin: auto;
    }

    .loja-card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        text-align: center;
        padding: 25px;
        border: 1px solid rgba(0, 0, 0, 0.3);
    }

    .loja-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.5);
    }

    .loja-card img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 15px;
    }

    .loja-card h3 {
        font-size: 1.5rem;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .loja-card p {
        font-size: 1rem;
        color: #666;
        margin-bottom: 20px;
    }

    .loja-card a {
        display: inline-block;
        padding: 10px 20px;
        background-color: #0D4376; /* Substituído */
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background 0.3s;
        width: 95%;
        border: 2px #0D4376 solid; /* Substituído */
    }

    .loja-card a:hover {
        background-color: transparent;
        color: #0D4376; /* Substituído */
        border: 2px #0D4376 solid; /* Substituído */
    }

    @media screen and (max-width: 768px) {
        header {
            padding: 15px 20px;
            flex-direction: column;
            align-items: center;
        }

        header h1 {
            font-size: 2rem;
            margin-bottom: 5px;
        }

        header p {
            font-size: 1rem;
        }

        .content-header {
            flex-direction: column;
            text-align: center;
            font-size: 16px;
        }

        nav ul {
            margin-top: 10px;
        }

        nav ul li {
            display: block;
            margin: 10px 0;
        }

        nav ul li a {
            padding: 8px 15px;
            font-size: 0.9rem;
        }
    }
  </style>
</head>
<body>
  <header>
        <div class="content-logo">
            <img src="../assets/allen-bot-beauty.png" alt="logo-allen-beauty">
            <h1>Allen Beauty</h1>
        </div>
    </div>
    <nav>
      <ul>
        <li><a href="/adm">Gerenciamento</a></li>
      </ul>
    </nav>
  </header>

    <article class="content-header">
      <h2>Agende seu horário!</h2>
    </article>

  <section class="lojas"></section>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js";
    import { getFirestore, collection, getDocs } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyCGf-lc7B3bWjUa1rXmYHXLMK5z-eKrNCU",
      authDomain: "allenbeauty.firebaseapp.com",
      projectId: "allenbeauty",
      storageBucket: "allenbeauty.appspot.com",
      messagingSenderId: "347722299020",
      appId: "1:347722299020:web:1e946417d954bebe5d6da9",
      measurementId: "G-CWM27YKX8C"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    async function loadClientes() {
      const lojasContainer = document.querySelector(".lojas");
      const querySnapshot = await getDocs(collection(db, "users"));
      lojasContainer.innerHTML = "";
      querySnapshot.forEach(doc => {
        const cliente = doc.data();
        const imgSrc = cliente.imagem ? `data:image/png;base64,${cliente.imagem}` : 'https://via.placeholder.com/100';
        const lojaCard = document.createElement("div");
        lojaCard.classList.add("loja-card");
        lojaCard.innerHTML = `
          <img src="${imgSrc}" alt="${cliente.name}">
          <h3>${cliente.name || "Nome não informado"}</h3>
          <a href="/agendamento?id=${doc.id}&nome=${cliente.name || "Nome não informado"}">Agendar</a>
        `;
        lojasContainer.appendChild(lojaCard);
      });
    }

    document.addEventListener("DOMContentLoaded", loadClientes);
  </script>
</body>
</html>
